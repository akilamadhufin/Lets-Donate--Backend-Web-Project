 <main>
        {{{body}}}
        <section id="all-items" class="section">
            <h2>All Donated Items</h2>
        <div class="search-bar">
            <input type="text" id="search-input" placeholder="Search by title, category, or location">
            <span class="search-icon">&#128269;</span>
        </div>

        <div class="items-grid">
            {{#each allItems}}
            <div class="item-card"
                data-id="{{this._id}}"
                data-title="{{this.title}}"
                data-description="{{this.description}}"
                data-category="{{this.category}}"
                data-pickup="{{this.pickupLocation}}"
                data-date="{{this.publishedDate}}"
                data-image="{{this.image}}"
                data-user="{{this.userEmail}}"
                data-available="{{this.available}}">

                {{#if this.image}}
                <img src="http://localhost:3000/{{this.image}}" alt="{{this.title}}" class="item-image">
                {{/if}}
                <h3>{{this.title}}</h3>
                <p><strong>Pickup:</strong> {{this.pickupLocation}}</p>
                <p><strong>Available:</strong> {{#if this.available}}Yes{{else}}No{{/if}}</p>

                <!-- Book Item Button with Link to Booking Route -->
                {{#if this.available}}
                    <form action="/book/{{this._id}}" method="POST">
                        <button type="submit" class="book-btn-card">Book Item</button>
                    </form>
                {{else}}
                    <button class="book-btn-card" type="button" disabled>Book Item</button>
                {{/if}}
            </div>
            {{/each}}
        </div>

        
        </section>

    </main>