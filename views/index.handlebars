 <main>
        {{{body}}}
        <section id="all-items" class="section">
            <h2>All Donated Items</h2>
        <div class="search-bar">
            <input type="text" id="search-input" placeholder="Search by title, category, or location">
            <span class="search-icon">&#128269;</span>
        </div>

        <div class="items-grid">
            {{#each allItems}}
            <div class="item-card"
                data-id="{{this._id}}"
                data-title="{{this.title}}"
                data-description="{{this.description}}"
                data-category="{{this.category}}"
                data-pickup="{{this.pickupLocation}}"
                data-date="{{this.publishedDate}}"
                data-image="{{this.image}}"
                data-user="{{this.userEmail}}"
                data-available="{{this.available}}">

                {{#if this.image}}
                <img src="http://localhost:3000/{{this.image}}" alt="{{this.title}}" class="item-image">
                {{/if}}
                <h3>{{this.title}}</h3>
                <p><strong>Pickup:</strong> {{this.pickupLocation}}</p>
                <p><strong>Available:</strong> {{#if this.available}}Yes{{else}}No{{/if}}</p>
                <button type="submit" class="view-btn-card">View details</button>
                {{#if this.available}}
                    <form action="/book/{{this._id}}" method="POST">
                        <button type="submit" class="book-btn-card">Book Item</button>
                    </form>
                {{else}}
                    <button class="book-btn-card" type="button" disabled>Book Item</button>
                {{/if}}
            </div>
            {{/each}}
        </div>

        <!-- Modal -->
        <div id="item-modal" class="modal hidden">
            <div class="modal-content">
                <span class="close-btn">&times;</span>
                <div class="modal-body">
                    <img id="modal-image" />
                    <div class="modal-info">
                        <h3 id="modal-title"></h3>
                        <p id="modal-description"></p>
                        <p><strong>Category:</strong> <span id="modal-category"></span></p>
                        <p><strong>Address:</strong> <span id="modal-address"></span></p>
                        <div id="map"></div>
                        <p><strong>Published:</strong> <span id="modal-date"></span></p>
                        <p><strong>Available:</strong> <span id="modal-available"></span></p>
                        <textarea id="message-box" placeholder="Write a message to the donor..."></textarea>
                        <button id="send-message-btn">Send Message</button>

                        <!-- Book Item Button in Modal -->
                        <form method="POST" id="book-form" style="display: none;">
                            <button id="book-item-btn" type="submit">Book Item</button>
                        </form>
                        <button id="unavailable-btn" style="display: none;" disabled>Item Unavailable</button>
                    </div>
                </div>
            </div>
        </div>

        </section>

    </main>