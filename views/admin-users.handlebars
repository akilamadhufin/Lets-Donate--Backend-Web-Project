<section class="adminuser-section" aria-labelledby="manage-users-title">
  <h1 class="adminuser-title" id="manage-users-title">Manage Users</h1>
  <div class="adminusertable-container">
    <table class="adminuser-table" aria-describedby="admin-user-table-description">
      <caption id="admin-user-table-description">List of users and actions for management.</caption>
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Email</th>
          <th scope="col">Contact</th>
          <th scope="col">Address</th>
          <th scope="col">Admin</th>
          <th scope="col">Edit User</th>
          <th scope="col">Delete User</th>
        </tr>
      </thead>
      <tbody>
        {{#each users}}
        <tr>
          <td>{{firstname}} {{lastname}}</td>
          <td>{{email}}</td>
          <td>{{contactnumber}}</td>
          <td>{{address}}</td>
          <td>{{#if isAdmin}}Yes{{else}}No{{/if}}</td>
          <td>
            <a href="/admin/users/{{_id}}/update" class="btn btn-edit" aria-label="Edit user {{firstname}} {{lastname}}">Edit</a>
          </td>
          <td>
            <form action="/admin/users/{{_id}}?_method=DELETE" method="POST" class="delete-form" aria-label="Delete user {{firstname}} {{lastname}}">
                <button type="submit" class="btn btn-delete" onclick="return confirm('Are you sure you want to delete this user?')" aria-label="Delete user">
                  <i class="fas fa-trash-alt" aria-hidden="true"></i>Delete
                </button>
            </form>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>
